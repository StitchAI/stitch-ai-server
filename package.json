{
  "name": "stitch-ai-server",
  "private": true,
  "version": "1.0.0",
  "description": "Stitch AI Server",
  "license": "UNLICENSED",
  "scripts": {
    "local": "dotenv -e .env -- nest start --watch",
    "build": "nest build",
    "prisma:push": "prisma db push --schema=prisma/schema.prisma",
    "check:prettier": "prettier --write \"src/**/*.ts\"",
    "check:lint": "eslint --fix --ext .ts src/",
    "check:type": "tsc --p ./tsconfig.json --noEmit"
  },
  "dependencies": {
    "@nestjs/axios": "^4.0.0",
    "@nestjs/common": "^11.0.11",
    "@nestjs/config": "^4.0.1",
    "@nestjs/core": "^11.0.11",
    "@nestjs/mapped-types": "^2.1.0",
    "@nestjs/platform-express": "^11.0.11",
    "@nestjs/schedule": "^5.0.1",
    "@prisma/client": "^6.4.1",
    "@slack/webhook": "^7.0.4",
    "axios": "^1.8.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "crypto-js": "^4.2.0",
    "date-fns": "^4.1.0",
    "dotenv": "^16.4.7",
    "dotenv-cli": "^8.0.0",
    "lodash": "^4.17.21",
    "prisma": "^6.4.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "viem": "^2.23.9"
  },
  "devDependencies": {
    "@eslint/create-config": "^1.5.0",
    "@eslint/js": "^9.22.0",
    "@nestjs/cli": "^11.0.5",
    "@nestjs/schematics": "^11.0.2",
    "@nestjs/testing": "^11.0.11",
    "@types/crypto-js": "^4.2.2",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/lodash": "^4.17.16",
    "@types/node": "^22.13.10",
    "@types/supertest": "^6.0.2",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "globals": "^16.0.0",
    "jest": "^29.7.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.6",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.26.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "./",
    "testRegex": "src/.*\\.spec\\.ts$",
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "~/(.*)": "<rootDir>/src/$1"
    }
  }
}
